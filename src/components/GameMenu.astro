<div class="menu">
    <button class="btn easy">Easy</button>
    <button class="btn medium">Medium</button>
    <button class="btn hard">Hard</button>
    <button class="btn review">Review Mistakes</button>
</div>

<style>
    .menu {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
        margin: 2rem 0;
    }

    .btn {
        padding: 1rem 2rem;
        border: none;
        border-radius: 8px;
        font-size: 1.2rem;
        cursor: pointer;
        transition: transform 0.2s;
    }

    .btn:hover {
        transform: scale(1.05);
    }

    .easy { background-color: #4CAF50; color: white; }
    .medium { background-color: #FFA500; color: white; }
    .hard { background-color: #f44336; color: white; }
    .review { background-color: #2196F3; color: white; }
</style>
