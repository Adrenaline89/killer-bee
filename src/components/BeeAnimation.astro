<div class="bee-container">
    <img src="/images/bee.png" alt="Bee" class="bee-image" />
</div>

<style>
    .bee-container {
        height: 200px;
        position: relative;
        overflow: hidden;
    }

    .bee-image {
        width: 80px;
        height: auto;
        position: absolute;
        animation: complex-flight 15s infinite ease-in-out;
    }

    @keyframes complex-flight {
        0% {
            left: 0;
            top: 50%;
            transform: translateY(-50%) rotate(5deg) scale(1);
        }
        10% {
            left: 20%;
            top: 20%;
            transform: translateY(0) rotate(15deg) scale(1.05);
        }
        20% {
            left: 40%;
            top: 60%;
            transform: translateY(0) rotate(-10deg) scale(0.95);
        }
        30% {
            left: 60%;
            top: 30%;
            transform: translateY(0) rotate(0deg) scale(1);
        }
        40% {
            left: 75%;
            top: 50%;
            transform: translateY(0) translateX(20px) rotate(25deg) scale(1.1) rotateY(180deg);
        }
        50% {
            left: 80%;
            top: 70%;
            transform: translateY(0) translateX(-20px) rotate(0deg) scale(1) rotateY(180deg);
        }
        60% {
            left: 60%;
            top: 80%;
            transform: translateY(0) rotate(-15deg) scale(0.9) rotateY(180deg);
        }
        70% {
            left: 40%;
            top: 35%;
            transform: translateY(0) rotate(-5deg) scale(1) rotateY(180deg);
        }
        80% {
            left: 30%;
            top: 40%;
            transform: translateY(0) rotate(-25deg) scale(1.05) rotateY(180deg);
        }
        90% {
            left: 10%;
            top: 60%;
            transform: translateY(0) rotate(5deg) scale(0.95);
        }
        100% {
            left: 0;
            top: 50%;
            transform: translateY(-50%) rotate(5deg) scale(1);
        }
    }
</style>
