---
import Layout from '../layouts/Layout.astro';
import GameMenu from '../components/GameMenu.astro';
import BeeAnimation from '../components/BeeAnimation.astro';
import SpellingGame from '../components/SpellingGame.astro';
---

<Layout title="Spelling Bee Game">
    <main class="container">
        <BeeAnimation />
        <GameMenu />
        <SpellingGame />
    </main>
</Layout>

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        position: relative;
        min-height: 100vh;
        //background: linear-gradient(135deg, #FFD700, #FFA500);
    }

    main > * {
        position: relative;
        z-index: 2;
    }
</style>
